<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    tools:context=".NewRegister">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnbacksign"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/back_arrow"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="create account"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etfirstn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/edit_e_p_text"
                android:ems="10"
                android:gravity="center"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/etlastn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edit_e_p_text"
                android:ems="10"
                android:gravity="center"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/etemailsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_e_p_text"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#ffffff"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/etpasssign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_e_p_text"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#ffffff"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btnsignup"

            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logbutton"
            android:clickable="false"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="16sp"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>