<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111111"
    tools:context=".LogInpg">


    <!--        android:layout_marginTop="20p-->
<!--"-->
<!--        android:layout_marginBottom="654dp"-->
    <!--        android:layout_marginTop="-303dp"-->
    <!--        android:layout_marginBottom="303dp"-->


    <ImageView
        android:id="@+id/imgbackbtn"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"


        android:layout_alignParentBottom="true"
        android:layout_marginTop="-291dp"
        android:layout_marginEnd="352dp"
        android:layout_marginBottom="291dp"
        android:clickable="true"
        app:srcCompat="@drawable/back_arrow"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="567dp"
        android:text="Email or username"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/etlogemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="509dp"
        android:background="@drawable/edit_e_p_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="461dp"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/etlogpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="401dp"
        android:background="@drawable/edit_e_p_text"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#ffffff"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/eyehideornot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="412dp"
        android:background="#434343"
        android:rotation="72"
        app:srcCompat="@drawable/ic_baseline_visibility_off_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/loginbtnglow"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="330dp"
        android:background="@drawable/logbutton"
        android:clickable="false"
        android:text="Log In"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="@null" />

</RelativeLayout>